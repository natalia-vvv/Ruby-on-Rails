<p>
  <strong><%= comment.commenter %>: </strong><%= comment.body %>
</p>


<% if current_user && comment.user_id == current_user.id %>
<p>
  <%= link_to 'Delete Comment', [comment.article, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>

</p>
<% end %>
