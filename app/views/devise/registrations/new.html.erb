  <script>
    $("#header").html("<h2>Sign up</h2>")
  </script>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-0 col-md-4"></div>
      <div class="col-sm-12 col-md-4">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 55 %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", size: 55  %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 55  %>
  </div>

  <div class="actions" align="center" >
    <%= f.submit "Sign up", class: 'btn-primary btn'%><br>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

</div>
<div class="col-sm-0 col-md-4"></div>
</div>
</div>
